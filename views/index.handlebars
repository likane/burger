<h1>Eat-Da-Burger!</h1>

<div class="container">
	
	<div class="whole">

		{{#each burger}}
			{{#unless this.devoured}}
			
				{{this.id}} 
				{{this.burger_name}}

				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          		<input type="hidden" name="devoured" value="true">
          		<button type="submit">DEVOUR!</button>
        		</form>
			
			{{/unless}}
				
		{{/each}}


	</div>

	<div class="eaten">
		
		{{#each burger}}
			{{#if this.devoured}}
			
				{{this.id}} 
				{{this.burger_name}}		
				<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          		<input type="hidden" name="devoured" value="false">
          		<button type="submit">uneat!</button>
        		</form>

			{{/if}}
			
		{{/each}}
	</div>

	<div>
		
			<input type="text" action="burgers/updae/{{this.id}}?_method=PUT" method="POST">
		

		<button type="submit">Submit</button>

		<p>Enter a burger you want to eat. Click the "Submit" button.</p>
	</div>



</div>

